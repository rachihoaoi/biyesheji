<div class="publishArea">
    <div style="height:700px;width:850px;display: inline-block;float: left;">
        <label class="labelNormal">应用名称：</label> <input readonly class="inputBox" placeholder="应用名称" ng-model="appName" >
        <label class="labelNormal">操作系统：</label>
        <select readonly class="req_list" style="margin-top: 24px;width:80px" ng-model="appOS">
            <option value="">--类型--</option>
            <option value="Android">Android</option>
            <option value="IOS">IOS</option>
        </select>
        <br>
        <label class="labelNormal">开发商：</label> <input readonly class="inputBox" placeholder="开发商" ng-model="appDeveloper">
